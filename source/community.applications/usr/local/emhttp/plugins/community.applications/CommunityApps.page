// NOTE: The sort drops the .plg from the order so that UD+ winds up installing after UD.  This differs from the boot sequence.
	pluginArray.sort(installSort);
	if (pluginCount) {
		pluginArray.forEach( function(value) {
			plugin += value[1] + "*";
		});
